{
  "name": "my-assistant",
  "displayName": "My AI Assistant",
  "description": "An AI coding assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:my-assistant.explainCode",
    "onCommand:my-assistant.generateCode",
    "onCommand:my-assistant.generateTest"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-assistant.explainCode",
        "title": "My Assistant: Explain Code"
      },
      {
        "command": "my-assistant.generateCode",
        "title": "My Assistant: Generate Code"
      },
      {
        "command": "my-assistant.generateTest",
        "title": "My Assistant: Generate Test"
      }
    ],
    "menus": {
        "editor/context": [
            {
                "when": "editorHasSelection",
                "command": "my-assistant.explainCode",
                "group": "navigation"
            },
            {
                "when": "editorHasSelection",
                "command": "my-assistant.generateCode",
                "group": "navigation"
            },
            {
                "when": "editorHasSelection",
                "command": "my-assistant.generateTest",
                "group": "navigation"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "eslint": "^8.52.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
